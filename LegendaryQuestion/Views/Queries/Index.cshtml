@model IEnumerable<LegendaryQuestion.Models.Query>

@{
    ViewBag.Title = "Questions And Answers";
}

<h2>Questions And Answers</h2>

<p>
    @Html.ActionLink("Ask A Question", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Questions: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Search" />
    </p>
    }

    

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AskedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AskedWhen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th>
        </th>
</tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AskedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AskedWhen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
